<!DOCTYPE html>
<html>
<head>
  <title>Waterfalls</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
<!-- Latest compiled and minified CSS -->
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"%>

<!-- Optional theme -->
<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css"%>


  <%= stylesheet_link_tag "normalize" %>

  <%= stylesheet_link_tag "main" %>
  
  <%= stylesheet_link_tag "application", media: 'all' %>
  
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Ubuntu:400,700" %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to('Waterfalls', root_path, class:'navbar-brand') %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to('Home', root_path) %></li>
            <li><%= link_to 'Waterfalls', controller: '/waterfalls' %></li>
            <% if admin_signed_in? %>
					<li><%= link_to('Log Out', destroy_admin_session_path, :method => :get) %></li>
				<% else %>
					<li><%= link_to('Login', admin_session_path, :method => :get) %></li>
				<% end %>            
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<%= yield %>

<!-- Latest compiled and minified JavaScript -->
<%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"'data-turbolinks-track' => true %> 
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js" %>
<%= javascript_include_tag "jquery.sticky"%>
<%= javascript_include_tag "sticky" %>
<%= javascript_include_tag "animation" %>
<%= javascript_include_tag "overlay" %>  

</body>
</html>