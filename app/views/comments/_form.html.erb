
		<%= form_for([@waterfall, @waterfall.comments.build]) do |f| %>
  		<p>
    		<%= f.label :commenter, "Name" %><br>
    		<%= f.text_field :commenter %>
  		</p>
  		<p>
    		<%= f.label :body, "Comment" %><br>
    		<%= f.text_area :body, class: "form-control", rows: 10 %>
  		</p>
  		<p>
    		<%= f.submit "Submit", class: "btn btn-primary" %>
  		</p><br>
		<% end %>