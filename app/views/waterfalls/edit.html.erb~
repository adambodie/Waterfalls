<h1>Editing waterfall</h1>
 
<%= form_for :waterfall, url: waterfall_path(@waterfall), method: :patch do |f| %>
 
  <% if @waterfall.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@waterfall.errors.count, "error") %> prohibited
        this waterfall from being saved:
      </h2>
      <ul>
        <% @waterfall.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', waterfalls_path %>