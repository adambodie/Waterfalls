<div class="jumbotron">
	<h1>List of Waterfalls</h1>
</div>
<div class="container">
	<div class="page">
	<div class="row">
	<% paginate @waterfalls %>	
	<table>
		<tr>
   		<th>Name</th>
    		<th colspan="4"></th>
  		</tr>
  	<% @waterfalls.each do |waterfall| %>
    	<tr>
      	<td class="waterfall-title"><%= waterfall.title %></td>
      	<td><%= image_tag waterfall.avatar.url(:thumb),  class: "img-responsive big-picture"%></td>
      	<td><%= link_to 'Show', waterfall_path(waterfall) %></td>
      	<% if admin_signed_in? %>
	      	<td><%= link_to 'Edit', edit_waterfall_path(waterfall) %></td>
	      	<td><%= link_to 'Destroy', waterfall_path(waterfall),
   	   	        method: :delete,
      	   	     data: { confirm: 'Are you sure?' } %></td>
			<% end %>    	
    	</tr>
  	<% end %>

	</table><br></div>
	<%= paginate @waterfalls %>
<%= link_to 'New', new_waterfall_path() %>
	</div> 
</div>
