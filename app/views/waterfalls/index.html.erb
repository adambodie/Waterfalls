<h1>List of Waterfalls</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
 
  <% @waterfalls.each do |waterfall| %>
    <tr>
      <td><%= waterfall.title %></td>
      <td><%= waterfall.text %></td>
      <td><%= link_to 'Show', waterfall_path(waterfall) %></td>
      <td><%= link_to 'Edit', edit_waterfall_path(waterfall) %></td>
      <td><%= link_to 'Destroy', waterfall_path(waterfall),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>