<div class="jumbotron">
	<h1>List of Waterfalls</h1>
</div>
<div class="container">
	<div class="page">
	<div class="row">
	<table>
		<tr>
   		<th>Name</th>
    		<th colspan="4"></th>
  		</tr>
  	<% @waterfalls.each do |waterfall| %>
    	<tr>
      	<td><%= waterfall.title %></td>
      	<td><%= image_tag waterfall.avatar.url(:thumb) %></td>
      	<td><%= link_to 'Show', waterfall_path(waterfall) %></td>
      	<td><%= link_to 'Edit', edit_waterfall_path(waterfall) %></td>
      	<td><%= link_to 'Destroy', waterfall_path(waterfall),
      	        method: :delete,
         	     data: { confirm: 'Are you sure?' } %></td>
    	</tr>
  	<% end %>

	</table><br></div>
<%= link_to 'New', new_waterfall_path() %>
	</div> 
</div>
