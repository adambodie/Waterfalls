<div class="container-fluid">
	<div class="page">
		<div class="jumbotron">
			<h1>
	  			<strong><%= @waterfall.title %></strong>
			</h1>
		</div>
 		<div class="row">
 			<div class="col-md-6">
				<p><%= @waterfall.text %></p>
			</div>
		</div>
		<div class ="row">
			<h3>Comments</h3>
			<%= render @waterfall.comments %>
 		</div>
 		<div class ="row">
			<h3>Add a comment:</h3>
			<%= render 'comments/form' %>
		</div>
		<%= link_to 'Edit', edit_waterfall_path(@waterfall) %> |
		<%= link_to 'Back', waterfalls_path %>
	</div>
</div>
