<%= form_for @post, url: @posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p> 
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, size: "80x15" , autocomplete: 'off'  %>
  </p>
 
  <p>
    <%= f.submit "Upload", class: "btn btn-primary" %>
  </p>
<% end %>